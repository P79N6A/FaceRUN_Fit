<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppWelTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@drawable/bg_welcome</item>
    </style>

    <style name="WelTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/main_bg10</item>
    </style>

    <style name="Wel2Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 是否允许有标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 提示背景图片 -->
        <item name="android:windowBackground">@drawable/main_bg555</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppRedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_cc</item>
        <item name="colorPrimaryDark">@color/red_cc</item>
        <item name="colorAccent">@color/red_cc</item>
    </style>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimaryDark">@color/action_title_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--<style name="AppTheme" parent="Theme.AppCompat.Light">
        &lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>-->

    <style name="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NearbyDialogFragment">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <!-- 全屏对话框 -->
    <style name="DialogFullScreen">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    //For GifView Declaration

    <style name="Widget.GifView" parent="@android:style/Widget" />

    <style name="Dialog_loading_noDim" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!-- 无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 没有标题 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景是否半透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 背景是否模糊 -->
    </style>

    <style name="Anim_fade" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_alpha_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_alpha_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_alpha_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_alpha_out</item>
    </style>

</resources>
