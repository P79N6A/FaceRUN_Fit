<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_46"
    android:background="@drawable/btn_ffffff_f4f4f4_selector">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_8"
        android:paddingRight="@dimen/margin_8">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_required"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_4"
            android:gravity="center_vertical"
            android:text="title"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_32" />

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:src="@drawable/ic_common_indicator" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_title"
            android:layout_toRightOf="@id/tv_title"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_6"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text="content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_32" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line_error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_alignParentBottom="true"
        android:background="@color/line_bg_color"
        android:visibility="visible" />

</RelativeLayout>