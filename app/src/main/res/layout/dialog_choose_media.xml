<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_50"
        android:layout_marginRight="@dimen/margin_50"
        android:background="@drawable/bg_rectangle_ffffff"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_popup_camera"
            android:drawablePadding="@dimen/margin_6"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_12"
            android:text="相机" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_bg_color" />

        <TextView
            android:id="@+id/dialog_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_popup_photos"
            android:drawablePadding="@dimen/margin_6"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_12"
            android:text="相册" />
    </LinearLayout>

</RelativeLayout>