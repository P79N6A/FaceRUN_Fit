<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_100"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_bg_1" />

        <ImageView
            android:id="@+id/iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_4"
            android:layout_alignRight="@+id/iv_icon"
            android:src="@drawable/ic_new_chat_nor" />

        <!--ic_history_item_time-->
        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:18"
            android:layout_alignBottom="@+id/iv_icon"
            android:shadowDx="10"
            android:shadowDy="20"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/margin_4"
            android:textColor="@color/color_999999"
            android:padding="@dimen/margin_4"
            android:drawableLeft="@drawable/ic_history_item_time"
            android:shadowColor="@color/action_title_color"/>
    </RelativeLayout>


</LinearLayout>
